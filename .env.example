# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key

# Server Ports
PORT=8015
ADMIN_PORT=8016

# Database
DATABASE_URL="file:./dev.db"

# Admin Token (change this in production!)
ADMIN_TOKEN=your-secure-admin-token

# Session Secret (used for cookie signing)
SESSION_SECRET=your-secure-session-secret-change-in-production

# Encryption Key (for API keys at rest - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-64-character-hex-encryption-key

# Optional: Voice settings
DEFAULT_VOICE=alloy

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Stripe
STRIPE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Braintree
BRAINTREE_MERCHANT_ID=
BRAINTREE_PUBLIC_KEY=
BRAINTREE_PRIVATE_KEY=
