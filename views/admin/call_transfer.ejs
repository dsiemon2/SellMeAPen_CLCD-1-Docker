<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Call Transfer - Sell Me a Pen Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .toast-container { position: fixed; top: 20px; right: 20px; z-index: 9999; }
    .bulk-actions { display: none; background: #e3f2fd; padding: 0.75rem 1rem; border-radius: 8px; }
    .bulk-actions.show { display: flex; }
    .row-checkbox { cursor: pointer; }
    tr.selected { background-color: #e3f2fd !important; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { active: 'call-transfer' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-telephone-forward text-primary me-2"></i>Call Transfer</h2>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDestModal" title="Add a new transfer destination">
            <i class="bi bi-plus-lg me-2"></i>Add Destination
          </button>
        </div>

        <div class="toast-container"></div>

        <!-- Transfer Settings -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Transfer Configuration</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label">Transfer Mode</label>
                  <select class="form-select" id="transferMode">
                    <option value="blind" <%= settings?.mode === 'blind' ? 'selected' : '' %>>Blind Transfer</option>
                    <option value="warm" <%= settings?.mode === 'warm' ? 'selected' : '' %>>Warm Transfer (Announced)</option>
                    <option value="queue" <%= settings?.mode === 'queue' ? 'selected' : '' %>>Queue-based Transfer</option>
                  </select>
                  <div class="form-text">Blind: immediate transfer. Warm: announce before transfer. Queue: use call queue.</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label">Hold Music</label>
                  <select class="form-select" id="holdMusic">
                    <option value="default">Default Music</option>
                    <option value="jazz">Jazz</option>
                    <option value="classical">Classical</option>
                    <option value="silent">Silent</option>
                    <option value="custom">Custom URL</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label">Transfer Timeout (seconds)</label>
                  <input type="number" class="form-control" id="timeout" value="<%= settings?.timeout || 30 %>" min="10" max="120">
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label">Fallback Action</label>
                  <select class="form-select" id="fallbackAction">
                    <option value="voicemail">Send to Voicemail</option>
                    <option value="retry">Retry Next Destination</option>
                    <option value="callback">Offer Callback</option>
                    <option value="disconnect">Disconnect</option>
                  </select>
                </div>
              </div>
            </div>
            <button class="btn btn-primary" onclick="saveSettings()" data-bs-toggle="tooltip" title="Save transfer settings">
              <i class="bi bi-save me-2"></i>Save Settings
            </button>
          </div>
        </div>

        <!-- Bulk Actions Toolbar -->
        <div class="bulk-actions mb-3 align-items-center justify-content-between" id="bulkActions">
          <div>
            <span class="me-3"><strong id="selectedCount">0</strong> selected</span>
            <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete selected destinations" onclick="deleteSelected()">
              <i class="bi bi-trash"></i> Delete Selected
            </button>
          </div>
          <button class="btn btn-sm btn-link" onclick="clearSelection()" data-bs-toggle="tooltip" title="Clear all selections">Clear Selection</button>
        </div>

        <!-- Transfer Destinations -->
        <div class="card mb-4">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-telephone me-2"></i>Transfer Destinations</h5>
          </div>
          <div class="card-body p-0">
            <table class="table table-hover mb-0" id="destinationsTableMain">
              <thead class="table-light">
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" class="form-check-input" id="selectAll" data-bs-toggle="tooltip" title="Select all">
                  </th>
                  <th>Name</th>
                  <th>Number</th>
                  <th>Priority</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="destinationsTable">
                <% if (destinations && destinations.length > 0) { %>
                  <% destinations.forEach(dest => { %>
                    <tr data-id="<%= dest.id %>">
                      <td><input type="checkbox" class="form-check-input row-checkbox" value="<%= dest.id %>"></td>
                      <td><strong><%= dest.name %></strong></td>
                      <td><%= dest.number %></td>
                      <td><span class="badge bg-secondary"><%= dest.priority %></span></td>
                      <td>
                        <span class="badge bg-<%= dest.enabled ? 'success' : 'secondary' %>">
                          <%= dest.enabled ? 'Active' : 'Disabled' %>
                        </span>
                      </td>
                      <td>
                        <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="Toggle destination" onclick="toggleDest('<%= dest.id %>')">
                          <i class="bi bi-toggle-on"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete destination" onclick="deleteDest('<%= dest.id %>')">
                          <i class="bi bi-trash"></i>
                        </button>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr id="emptyRow">
                    <td colspan="6" class="text-center text-muted py-4">
                      <i class="bi bi-telephone-forward fs-1 d-block mb-2"></i>
                      No transfer destinations configured.
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <!-- Pagination Footer -->
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">Showing <span id="showingStart">1</span>-<span id="showingEnd"><%= destinations ? Math.min(10, destinations.length) : 0 %></span> of <span id="totalRows"><%= destinations ? destinations.length : 0 %></span></div>
            <nav>
              <ul class="pagination pagination-sm mb-0" id="pagination">
                <li class="page-item disabled" id="prevPage">
                  <a class="page-link" href="#" onclick="changePage(-1); return false;"><i class="bi bi-chevron-left"></i></a>
                </li>
                <li class="page-item disabled" id="nextPage">
                  <a class="page-link" href="#" onclick="changePage(1); return false;"><i class="bi bi-chevron-right"></i></a>
                </li>
              </ul>
            </nav>
            <select class="form-select form-select-sm" id="pageSize" style="width: auto;" data-bs-toggle="tooltip" title="Rows per page">
              <option value="10">10 / page</option>
              <option value="25">25 / page</option>
              <option value="50">50 / page</option>
            </select>
          </div>
        </div>

        <!-- Transfer Triggers -->
        <div class="card">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Transfer Triggers</h5>
          </div>
          <div class="card-body">
            <p class="text-muted">Define when calls should be automatically transferred:</p>
            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" id="triggerSale" <%= settings?.triggerSale ? 'checked' : '' %>>
              <label class="form-check-label" for="triggerSale">Transfer on successful sale (for order processing)</label>
            </div>
            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" id="triggerEscalate" <%= settings?.triggerEscalate ? 'checked' : '' %>>
              <label class="form-check-label" for="triggerEscalate">Transfer when customer requests human agent</label>
            </div>
            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" id="triggerComplex" <%= settings?.triggerComplex ? 'checked' : '' %>>
              <label class="form-check-label" for="triggerComplex">Transfer on complex questions AI cannot handle</label>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Add Destination Modal -->
  <div class="modal fade" id="addDestModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Transfer Destination</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addDestForm">
            <div class="mb-3">
              <label class="form-label">Name</label>
              <input type="text" class="form-control" id="destName" required placeholder="Sales Team">
            </div>
            <div class="mb-3">
              <label class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="destNumber" required placeholder="+1234567890">
            </div>
            <div class="mb-3">
              <label class="form-label">Priority (1 = highest)</label>
              <input type="number" class="form-control" id="destPriority" value="1" min="1" max="10">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" onclick="addDestination()">Add Destination</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const basePath = '<%= typeof basePath !== "undefined" ? basePath : "" %>';
    const csrfToken = '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>';
    let currentPage = 1;
    let pageSize = 10;
    let allRows = [];
    let selectedRows = new Set();

    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));

      allRows = Array.from(document.querySelectorAll('#destinationsTable tr:not(#emptyRow)'));
      updatePagination();
      initCheckboxes();
    });

    function initCheckboxes() {
      const selectAll = document.getElementById('selectAll');
      if (selectAll) {
        selectAll.addEventListener('change', function() {
          const checkboxes = document.querySelectorAll('.row-checkbox');
          checkboxes.forEach(cb => {
            cb.checked = this.checked;
            const row = cb.closest('tr');
            if (this.checked) {
              selectedRows.add(cb.value);
              row.classList.add('selected');
            } else {
              selectedRows.delete(cb.value);
              row.classList.remove('selected');
            }
          });
          updateBulkActions();
        });
      }

      document.querySelectorAll('.row-checkbox').forEach(cb => {
        cb.addEventListener('change', function() {
          const row = this.closest('tr');
          if (this.checked) {
            selectedRows.add(this.value);
            row.classList.add('selected');
          } else {
            selectedRows.delete(this.value);
            row.classList.remove('selected');
          }
          updateBulkActions();
        });
      });
    }

    function updateBulkActions() {
      const bulkActions = document.getElementById('bulkActions');
      const selectedCount = document.getElementById('selectedCount');
      selectedCount.textContent = selectedRows.size;
      bulkActions.classList.toggle('show', selectedRows.size > 0);
    }

    function clearSelection() {
      selectedRows.clear();
      document.querySelectorAll('.row-checkbox').forEach(cb => {
        cb.checked = false;
        cb.closest('tr').classList.remove('selected');
      });
      document.getElementById('selectAll').checked = false;
      updateBulkActions();
    }

    function updatePagination() {
      const totalPages = Math.ceil(allRows.length / pageSize);
      const start = (currentPage - 1) * pageSize;
      const end = Math.min(start + pageSize, allRows.length);

      allRows.forEach((row, idx) => {
        row.style.display = (idx >= start && idx < end) ? '' : 'none';
      });

      document.getElementById('showingStart').textContent = allRows.length > 0 ? start + 1 : 0;
      document.getElementById('showingEnd').textContent = end;
      document.getElementById('totalRows').textContent = allRows.length;

      document.getElementById('prevPage').classList.toggle('disabled', currentPage === 1);
      document.getElementById('nextPage').classList.toggle('disabled', currentPage >= totalPages);

      const pagination = document.getElementById('pagination');
      const pageItems = pagination.querySelectorAll('.page-number');
      pageItems.forEach(item => item.remove());

      const nextPageLi = document.getElementById('nextPage');
      for (let i = 1; i <= totalPages; i++) {
        const li = document.createElement('li');
        li.className = `page-item page-number ${i === currentPage ? 'active' : ''}`;
        li.innerHTML = `<a class="page-link" href="#" onclick="goToPage(${i}); return false;">${i}</a>`;
        pagination.insertBefore(li, nextPageLi);
      }
    }

    function changePage(delta) {
      const totalPages = Math.ceil(allRows.length / pageSize);
      const newPage = currentPage + delta;
      if (newPage >= 1 && newPage <= totalPages) {
        currentPage = newPage;
        updatePagination();
      }
    }

    function goToPage(page) {
      currentPage = page;
      updatePagination();
    }

    document.getElementById('pageSize')?.addEventListener('change', function() {
      pageSize = parseInt(this.value);
      currentPage = 1;
      updatePagination();
    });

    async function deleteSelected() {
      if (selectedRows.size === 0) return;
      if (!confirm(`Delete ${selectedRows.size} destination(s)?`)) return;

      for (const id of selectedRows) {
        await fetch(`${basePath}/admin/call-transfer/destinations/${id}`, {
          method: 'DELETE',
          headers: { 'x-csrf-token': csrfToken }
        });
      }
      location.reload();
    }

    function showToast(message, type = 'success') {
      const container = document.querySelector('.toast-container');
      const toast = document.createElement('div');
      toast.className = `toast show align-items-center text-bg-${type} border-0`;
      toast.innerHTML = `<div class="d-flex"><div class="toast-body">${message}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>`;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    async function saveSettings() {
      try {
        const res = await fetch(`${basePath}/admin/call-transfer`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'x-csrf-token': csrfToken },
          body: JSON.stringify({
            mode: document.getElementById('transferMode').value,
            holdMusic: document.getElementById('holdMusic').value,
            timeout: parseInt(document.getElementById('timeout').value),
            fallbackAction: document.getElementById('fallbackAction').value,
            triggerSale: document.getElementById('triggerSale').checked,
            triggerEscalate: document.getElementById('triggerEscalate').checked,
            triggerComplex: document.getElementById('triggerComplex').checked
          })
        });
        if (res.ok) showToast('Settings saved!');
        else showToast('Failed to save', 'danger');
      } catch (err) {
        showToast('Error saving', 'danger');
      }
    }

    async function addDestination() {
      const data = {
        name: document.getElementById('destName').value,
        number: document.getElementById('destNumber').value,
        priority: parseInt(document.getElementById('destPriority').value)
      };

      try {
        const res = await fetch(`${basePath}/admin/call-transfer/destinations`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'x-csrf-token': csrfToken },
          body: JSON.stringify(data)
        });
        if (res.ok) {
          showToast('Destination added!');
          location.reload();
        } else {
          showToast('Failed to add', 'danger');
        }
      } catch (err) {
        showToast('Error adding destination', 'danger');
      }
    }

    async function toggleDest(id) {
      try {
        const res = await fetch(`${basePath}/admin/call-transfer/destinations/${id}/toggle`, {
          method: 'POST',
          headers: { 'x-csrf-token': csrfToken }
        });
        if (res.ok) location.reload();
      } catch (err) {
        showToast('Error toggling', 'danger');
      }
    }

    async function deleteDest(id) {
      if (!confirm('Delete this destination?')) return;
      try {
        const res = await fetch(`${basePath}/admin/call-transfer/destinations/${id}`, {
          method: 'DELETE',
          headers: { 'x-csrf-token': csrfToken }
        });
        if (res.ok) location.reload();
      } catch (err) {
        showToast('Error deleting', 'danger');
      }
    }
  </script>
</body>
</html>
