<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Knowledge Base - Sell Me a Pen Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .toast-container { position: fixed; top: 20px; right: 20px; z-index: 9999; }
    .bulk-actions { display: none; background: #e3f2fd; padding: 0.75rem 1rem; border-radius: 8px; }
    .bulk-actions.show { display: flex; }
    .row-checkbox { cursor: pointer; }
    tr.selected { background-color: #e3f2fd !important; }
    .doc-card { transition: all 0.2s; border-left: 4px solid transparent; }
    .doc-card:hover { border-left-color: #0d6efd; }
    .doc-card.disabled { opacity: 0.6; }
    .tag-badge { font-size: 0.7rem; margin-right: 0.25rem; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { active: 'knowledge-base' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-book text-primary me-2"></i>Knowledge Base</h2>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDocModal" title="Add new document to knowledge base">
            <i class="bi bi-plus-lg me-1"></i> Add Document
          </button>
        </div>

        <!-- Toast container -->
        <div class="toast-container"></div>

        <!-- Stats Row -->
        <div class="row g-3 mb-4">
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-file-text text-primary" style="font-size: 2rem;"></i>
                <h3 class="mt-2"><%= documents.length %></h3>
                <small class="text-muted">Total Documents</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                <h3 class="mt-2"><%= documents.filter(d => d.enabled).length %></h3>
                <small class="text-muted">Active</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-translate text-info" style="font-size: 2rem;"></i>
                <h3 class="mt-2"><%= [...new Set(documents.map(d => d.languageId).filter(Boolean))].length %></h3>
                <small class="text-muted">Languages</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-body-text text-warning" style="font-size: 2rem;"></i>
                <h3 class="mt-2"><%= Math.round(documents.reduce((sum, d) => sum + d.charCount, 0) / 1000) %>k</h3>
                <small class="text-muted">Characters</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Bulk Actions -->
        <div class="bulk-actions mb-3 align-items-center" id="bulkActions">
          <span class="me-3"><strong id="selectedCount">0</strong> selected</span>
          <button class="btn btn-sm btn-outline-success me-2" onclick="bulkToggle(true)" data-bs-toggle="tooltip" title="Enable selected">
            <i class="bi bi-check-lg"></i> Enable
          </button>
          <button class="btn btn-sm btn-outline-warning me-2" onclick="bulkToggle(false)" data-bs-toggle="tooltip" title="Disable selected">
            <i class="bi bi-x-lg"></i> Disable
          </button>
          <button class="btn btn-sm btn-outline-danger" onclick="bulkDelete()" data-bs-toggle="tooltip" title="Delete selected">
            <i class="bi bi-trash"></i> Delete
          </button>
        </div>

        <!-- Filter Bar -->
        <div class="card mb-3">
          <div class="card-body py-2">
            <div class="row g-2 align-items-center">
              <div class="col-md-4">
                <div class="input-group input-group-sm">
                  <span class="input-group-text"><i class="bi bi-search"></i></span>
                  <input type="text" class="form-control" id="searchInput" placeholder="Search documents...">
                </div>
              </div>
              <div class="col-md-3">
                <select class="form-select form-select-sm" id="typeFilter">
                  <option value="">All Types</option>
                  <option value="text">Text</option>
                  <option value="url">URL</option>
                  <option value="file">File</option>
                </select>
              </div>
              <div class="col-md-3">
                <select class="form-select form-select-sm" id="languageFilter">
                  <option value="">All Languages</option>
                  <% languages.forEach(lang => { %>
                  <option value="<%= lang.id %>"><%= lang.flag %> <%= lang.name %></option>
                  <% }); %>
                </select>
              </div>
              <div class="col-md-2">
                <select class="form-select form-select-sm" id="statusFilter">
                  <option value="">All Status</option>
                  <option value="enabled">Enabled</option>
                  <option value="disabled">Disabled</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <!-- Documents Table -->
        <div class="card">
          <div class="card-body p-0">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" class="form-check-input" id="selectAll" data-bs-toggle="tooltip" title="Select all">
                  </th>
                  <th>Title</th>
                  <th style="width: 100px;">Type</th>
                  <th style="width: 120px;">Language</th>
                  <th style="width: 100px;">Size</th>
                  <th style="width: 80px;">Status</th>
                  <th style="width: 150px;">Actions</th>
                </tr>
              </thead>
              <tbody id="tableBody">
                <% if (documents.length === 0) { %>
                <tr>
                  <td colspan="7" class="text-center py-5 text-muted">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2 mb-0">No documents yet. Add your first document to train the AI.</p>
                  </td>
                </tr>
                <% } else { %>
                <% documents.forEach(doc => { %>
                <tr data-id="<%= doc.id %>" data-type="<%= doc.type %>" data-language="<%= doc.languageId || '' %>" data-enabled="<%= doc.enabled %>">
                  <td>
                    <input type="checkbox" class="form-check-input row-checkbox" value="<%= doc.id %>">
                  </td>
                  <td>
                    <strong><%= doc.title %></strong>
                    <% if (doc.sourceUrl) { %>
                    <br><small class="text-muted"><i class="bi bi-link-45deg"></i> <%= doc.sourceUrl.substring(0, 50) %><%= doc.sourceUrl.length > 50 ? '...' : '' %></small>
                    <% } %>
                    <% if (doc.tags && JSON.parse(doc.tags).length > 0) { %>
                    <br>
                    <% JSON.parse(doc.tags).forEach(tag => { %>
                    <span class="badge bg-secondary tag-badge"><%= tag %></span>
                    <% }); %>
                    <% } %>
                  </td>
                  <td>
                    <% if (doc.type === 'text') { %>
                    <span class="badge bg-primary"><i class="bi bi-file-text"></i> Text</span>
                    <% } else if (doc.type === 'url') { %>
                    <span class="badge bg-info"><i class="bi bi-link-45deg"></i> URL</span>
                    <% } else { %>
                    <span class="badge bg-warning"><i class="bi bi-file-earmark"></i> File</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (doc.language) { %>
                    <%= doc.language.flag %> <%= doc.language.name %>
                    <% } else { %>
                    <span class="text-muted">All</span>
                    <% } %>
                  </td>
                  <td><%= Math.round(doc.charCount / 1000) %>k chars</td>
                  <td>
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" <%= doc.enabled ? 'checked' : '' %> onchange="toggleDoc('<%= doc.id %>', this.checked)">
                    </div>
                  </td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary me-1" onclick="editDoc('<%= doc.id %>')" data-bs-toggle="tooltip" title="Edit">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-info me-1" onclick="viewDoc('<%= doc.id %>')" data-bs-toggle="tooltip" title="View">
                      <i class="bi bi-eye"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" onclick="deleteDoc('<%= doc.id %>')" data-bs-toggle="tooltip" title="Delete">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }); %>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Pagination Footer -->
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">Showing <span id="showingStart">1</span>-<span id="showingEnd"><%= Math.min(documents.length, 10) %></span> of <span id="totalRows"><%= documents.length %></span></div>
            <nav>
              <ul class="pagination pagination-sm mb-0" id="pagination">
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
              </ul>
            </nav>
            <select class="form-select form-select-sm" id="pageSize" style="width: auto;">
              <option value="10">10 / page</option>
              <option value="25">25 / page</option>
              <option value="50">50 / page</option>
              <option value="100">100 / page</option>
            </select>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Add Document Modal -->
  <div class="modal fade" id="addDocModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add Document</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <form id="addDocForm">
          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">Title <span class="text-danger">*</span></label>
              <input type="text" class="form-control" name="title" required placeholder="e.g., Product FAQ">
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label class="form-label">Type</label>
                <select class="form-select" name="type" id="docType" onchange="toggleTypeFields()">
                  <option value="text">Text Content</option>
                  <option value="url">URL / Web Page</option>
                  <option value="file">File Upload</option>
                </select>
              </div>
              <div class="col-md-6">
                <label class="form-label">Language</label>
                <select class="form-select" name="languageId">
                  <option value="">All Languages</option>
                  <% languages.forEach(lang => { %>
                  <option value="<%= lang.id %>"><%= lang.flag %> <%= lang.name %></option>
                  <% }); %>
                </select>
              </div>
            </div>
            <div id="textFields">
              <div class="mb-3">
                <label class="form-label">Content <span class="text-danger">*</span></label>
                <textarea class="form-control" name="content" rows="10" placeholder="Paste your knowledge base content here..."></textarea>
                <small class="text-muted">This content will be used to train the AI on your product/service.</small>
              </div>
            </div>
            <div id="urlFields" style="display: none;">
              <div class="mb-3">
                <label class="form-label">URL <span class="text-danger">*</span></label>
                <input type="url" class="form-control" name="sourceUrl" placeholder="https://example.com/faq">
                <small class="text-muted">The page content will be fetched and indexed.</small>
              </div>
            </div>
            <div id="fileFields" style="display: none;">
              <div class="mb-3">
                <label class="form-label">File</label>
                <input type="file" class="form-control" name="file" accept=".txt,.md,.pdf,.docx">
                <small class="text-muted">Supported: .txt, .md, .pdf, .docx</small>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">Tags</label>
              <input type="text" class="form-control" name="tags" placeholder="product, faq, pricing (comma-separated)">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Add Document</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- View Document Modal -->
  <div class="modal fade" id="viewDocModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="viewDocTitle"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <pre id="viewDocContent" class="bg-light p-3 rounded" style="max-height: 500px; overflow-y: auto; white-space: pre-wrap;"></pre>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const documents = <%- JSON.stringify(documents) %>;

    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
    });

    function showToast(message, type = 'success') {
      const container = document.querySelector('.toast-container');
      const toast = document.createElement('div');
      toast.className = `toast show align-items-center text-bg-${type} border-0`;
      toast.innerHTML = `
        <div class="d-flex">
          <div class="toast-body">${message}</div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
      `;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    function toggleTypeFields() {
      const type = document.getElementById('docType').value;
      document.getElementById('textFields').style.display = type === 'text' ? '' : 'none';
      document.getElementById('urlFields').style.display = type === 'url' ? '' : 'none';
      document.getElementById('fileFields').style.display = type === 'file' ? '' : 'none';
    }

    // Select all checkbox
    document.getElementById('selectAll').addEventListener('change', function() {
      const checkboxes = document.querySelectorAll('.row-checkbox');
      checkboxes.forEach(cb => {
        cb.checked = this.checked;
        cb.closest('tr').classList.toggle('selected', this.checked);
      });
      updateBulkActions();
    });

    // Row checkboxes
    document.addEventListener('change', function(e) {
      if (e.target.classList.contains('row-checkbox')) {
        e.target.closest('tr').classList.toggle('selected', e.target.checked);
        updateBulkActions();
      }
    });

    function updateBulkActions() {
      const checked = document.querySelectorAll('.row-checkbox:checked').length;
      document.getElementById('bulkActions').classList.toggle('show', checked > 0);
      document.getElementById('selectedCount').textContent = checked;
    }

    async function toggleDoc(id, enabled) {
      try {
        const res = await fetch(`/admin/knowledge-base/${id}/toggle`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ enabled })
        });
        if (res.ok) {
          showToast(`Document ${enabled ? 'enabled' : 'disabled'}`);
        }
      } catch (err) {
        showToast('Failed to update document', 'danger');
      }
    }

    async function deleteDoc(id) {
      if (!confirm('Delete this document?')) return;
      try {
        const res = await fetch(`/admin/knowledge-base/${id}`, {
          method: 'DELETE'
        });
        if (res.ok) {
          document.querySelector(`tr[data-id="${id}"]`).remove();
          showToast('Document deleted');
        }
      } catch (err) {
        showToast('Failed to delete document', 'danger');
      }
    }

    function viewDoc(id) {
      const doc = documents.find(d => d.id === id);
      if (doc) {
        document.getElementById('viewDocTitle').textContent = doc.title;
        document.getElementById('viewDocContent').textContent = doc.content;
        new bootstrap.Modal(document.getElementById('viewDocModal')).show();
      }
    }

    function editDoc(id) {
      // For now, just view - edit modal could be added
      viewDoc(id);
    }

    async function bulkToggle(enabled) {
      const ids = Array.from(document.querySelectorAll('.row-checkbox:checked')).map(cb => cb.value);
      for (const id of ids) {
        await toggleDoc(id, enabled);
      }
      location.reload();
    }

    async function bulkDelete() {
      if (!confirm(`Delete ${document.querySelectorAll('.row-checkbox:checked').length} documents?`)) return;
      const ids = Array.from(document.querySelectorAll('.row-checkbox:checked')).map(cb => cb.value);
      for (const id of ids) {
        await fetch(`/admin/knowledge-base/${id}`, { method: 'DELETE' });
      }
      location.reload();
    }

    // Filter functionality
    ['searchInput', 'typeFilter', 'languageFilter', 'statusFilter'].forEach(id => {
      document.getElementById(id).addEventListener('change', filterDocs);
      document.getElementById(id).addEventListener('keyup', filterDocs);
    });

    function filterDocs() {
      const search = document.getElementById('searchInput').value.toLowerCase();
      const type = document.getElementById('typeFilter').value;
      const language = document.getElementById('languageFilter').value;
      const status = document.getElementById('statusFilter').value;

      document.querySelectorAll('#tableBody tr[data-id]').forEach(row => {
        const title = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
        const rowType = row.dataset.type;
        const rowLang = row.dataset.language;
        const rowEnabled = row.dataset.enabled === 'true';

        const matchSearch = !search || title.includes(search);
        const matchType = !type || rowType === type;
        const matchLang = !language || rowLang === language;
        const matchStatus = !status || (status === 'enabled' ? rowEnabled : !rowEnabled);

        row.style.display = matchSearch && matchType && matchLang && matchStatus ? '' : 'none';
      });
    }

    // Add document form
    document.getElementById('addDocForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      const formData = new FormData(this);
      const data = {
        title: formData.get('title'),
        type: formData.get('type'),
        content: formData.get('content') || '',
        sourceUrl: formData.get('sourceUrl') || null,
        languageId: formData.get('languageId') || null,
        tags: formData.get('tags') ? formData.get('tags').split(',').map(t => t.trim()) : []
      };

      try {
        const res = await fetch(`/admin/knowledge-base`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          showToast('Document added');
          location.reload();
        } else {
          showToast('Failed to add document', 'danger');
        }
      } catch (err) {
        showToast('Failed to add document', 'danger');
      }
    });
  </script>
</body>
</html>
