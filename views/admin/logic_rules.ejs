<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logic Rules - Sell Me a Pen Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .toast-container { position: fixed; top: 20px; right: 20px; z-index: 9999; }
    .rule-card { border-left: 4px solid #0d6efd; }
    .rule-card.disabled { border-left-color: #6c757d; opacity: 0.7; }
    .bulk-actions { display: none; background: #e3f2fd; padding: 0.75rem 1rem; border-radius: 8px; }
    .bulk-actions.show { display: flex; }
    .row-checkbox { cursor: pointer; }
    tr.selected { background-color: #e3f2fd !important; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { active: 'logic-rules' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-diagram-3 text-primary me-2"></i>Logic Rules</h2>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRuleModal" title="Create a new logic rule">
            <i class="bi bi-plus-lg me-2"></i>Add Rule
          </button>
        </div>

        <div class="toast-container"></div>

        <p class="text-muted mb-4">Define conditional logic to control conversation flow and AI behavior based on triggers.</p>

        <!-- Bulk Actions -->
        <div class="bulk-actions mb-3" id="bulkActions">
          <span class="me-3"><strong id="selectedCount">0</strong> selected</span>
          <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete selected rules" onclick="deleteSelected()">
            <i class="bi bi-trash"></i> Delete Selected
          </button>
        </div>

        <!-- Rules List -->
        <div class="card">
          <div class="card-body p-0">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" class="form-check-input" id="selectAll" data-bs-toggle="tooltip" title="Select all">
                  </th>
                  <th>Priority</th>
                  <th>Name</th>
                  <th>Trigger</th>
                  <th>Condition</th>
                  <th>Action</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="rulesTable">
                <% if (rules && rules.length > 0) { %>
                  <% rules.forEach(rule => { %>
                    <tr data-id="<%= rule.id %>" class="<%= rule.enabled ? '' : 'table-secondary' %>">
                      <td><input type="checkbox" class="form-check-input row-checkbox"></td>
                      <td><span class="badge bg-dark"><%= rule.priority %></span></td>
                      <td><strong><%= rule.name %></strong></td>
                      <td><span class="badge bg-info"><%= rule.trigger %></span></td>
                      <td><code class="small"><%= rule.condition %></code></td>
                      <td><span class="badge bg-success"><%= rule.action %></span></td>
                      <td>
                        <span class="badge bg-<%= rule.enabled ? 'success' : 'secondary' %>">
                          <%= rule.enabled ? 'Active' : 'Disabled' %>
                        </span>
                      </td>
                      <td>
                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Edit rule" onclick="editRule('<%= rule.id %>')">
                          <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="Toggle rule" onclick="toggleRule('<%= rule.id %>')">
                          <i class="bi bi-toggle-on"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete rule" onclick="deleteRule('<%= rule.id %>')">
                          <i class="bi bi-trash"></i>
                        </button>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="8" class="text-center text-muted py-4">
                      <i class="bi bi-diagram-3 fs-1 d-block mb-2"></i>
                      No logic rules configured. Click "Add Rule" to create one.
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">Showing <span id="showingStart">1</span>-<span id="showingEnd"><%= rules ? rules.length : 0 %></span> of <span id="totalRows"><%= rules ? rules.length : 0 %></span></div>
            <nav>
              <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
            </nav>
            <select class="form-select form-select-sm" id="pageSize" style="width: auto;">
              <option value="10">10 / page</option>
              <option value="25">25 / page</option>
              <option value="50">50 / page</option>
            </select>
          </div>
        </div>

        <!-- Rule Reference -->
        <div class="card mt-4">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-book me-2"></i>Rule Reference</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <h6>Triggers</h6>
                <ul class="list-unstyled small">
                  <li><code>message_received</code> - User sends message</li>
                  <li><code>session_start</code> - New session begins</li>
                  <li><code>objection_detected</code> - Objection identified</li>
                  <li><code>intent_detected</code> - Intent recognized</li>
                  <li><code>time_elapsed</code> - Timer fires</li>
                </ul>
              </div>
              <div class="col-md-4">
                <h6>Conditions</h6>
                <ul class="list-unstyled small">
                  <li><code>message.contains("word")</code></li>
                  <li><code>session.messageCount > 5</code></li>
                  <li><code>customer.sentiment < 0.3</code></li>
                  <li><code>product.mentioned == true</code></li>
                </ul>
              </div>
              <div class="col-md-4">
                <h6>Actions</h6>
                <ul class="list-unstyled small">
                  <li><code>transfer_call</code> - Transfer to agent</li>
                  <li><code>send_message</code> - Send specific message</li>
                  <li><code>switch_agent</code> - Change AI agent</li>
                  <li><code>trigger_webhook</code> - Call webhook</li>
                  <li><code>end_session</code> - End conversation</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Add Rule Modal -->
  <div class="modal fade" id="addRuleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Logic Rule</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addRuleForm">
            <div class="row">
              <div class="col-md-8">
                <div class="mb-3">
                  <label class="form-label">Rule Name</label>
                  <input type="text" class="form-control" id="ruleName" required placeholder="Escalate angry customers">
                </div>
              </div>
              <div class="col-md-4">
                <div class="mb-3">
                  <label class="form-label">Priority (1 = highest)</label>
                  <input type="number" class="form-control" id="rulePriority" value="10" min="1" max="100">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label">Trigger</label>
                  <select class="form-select" id="ruleTrigger">
                    <option value="message_received">Message Received</option>
                    <option value="session_start">Session Start</option>
                    <option value="objection_detected">Objection Detected</option>
                    <option value="intent_detected">Intent Detected</option>
                    <option value="time_elapsed">Time Elapsed</option>
                  </select>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label">Action</label>
                  <select class="form-select" id="ruleAction">
                    <option value="send_message">Send Message</option>
                    <option value="transfer_call">Transfer Call</option>
                    <option value="switch_agent">Switch Agent</option>
                    <option value="trigger_webhook">Trigger Webhook</option>
                    <option value="end_session">End Session</option>
                    <option value="set_variable">Set Variable</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">Condition (JavaScript expression)</label>
              <input type="text" class="form-control font-monospace" id="ruleCondition" placeholder='message.toLowerCase().includes("angry") || customer.sentiment < 0.2'>
            </div>
            <div class="mb-3">
              <label class="form-label">Action Parameters (JSON)</label>
              <textarea class="form-control font-monospace" id="ruleParams" rows="3" placeholder='{"message": "Let me connect you with a specialist..."}'></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" onclick="addRule()">Add Rule</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const basePath = '<%= typeof basePath !== "undefined" ? basePath : "" %>';
    const csrfToken = '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>';

    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
      initCheckboxes();
    });

    function showToast(message, type = 'success') {
      const container = document.querySelector('.toast-container');
      const toast = document.createElement('div');
      toast.className = `toast show align-items-center text-bg-${type} border-0`;
      toast.innerHTML = `<div class="d-flex"><div class="toast-body">${message}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>`;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    function initCheckboxes() {
      const selectAll = document.getElementById('selectAll');
      const checkboxes = document.querySelectorAll('.row-checkbox');
      const bulkActions = document.getElementById('bulkActions');
      const selectedCount = document.getElementById('selectedCount');

      selectAll?.addEventListener('change', () => {
        checkboxes.forEach(cb => {
          cb.checked = selectAll.checked;
          cb.closest('tr').classList.toggle('selected', selectAll.checked);
        });
        updateBulkActions();
      });

      checkboxes.forEach(cb => {
        cb.addEventListener('change', () => {
          cb.closest('tr').classList.toggle('selected', cb.checked);
          updateBulkActions();
        });
      });

      function updateBulkActions() {
        const checked = document.querySelectorAll('.row-checkbox:checked').length;
        selectedCount.textContent = checked;
        bulkActions.classList.toggle('show', checked > 0);
      }
    }

    async function addRule() {
      let params = {};
      try {
        params = JSON.parse(document.getElementById('ruleParams').value || '{}');
      } catch (e) {
        showToast('Invalid JSON in parameters', 'danger');
        return;
      }

      const data = {
        name: document.getElementById('ruleName').value,
        priority: parseInt(document.getElementById('rulePriority').value),
        trigger: document.getElementById('ruleTrigger').value,
        condition: document.getElementById('ruleCondition').value,
        action: document.getElementById('ruleAction').value,
        params
      };

      try {
        const res = await fetch(`${basePath}/admin/logic-rules`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'x-csrf-token': csrfToken },
          body: JSON.stringify(data)
        });
        if (res.ok) {
          showToast('Rule added!');
          location.reload();
        } else {
          showToast('Failed to add rule', 'danger');
        }
      } catch (err) {
        showToast('Error adding rule', 'danger');
      }
    }

    async function toggleRule(id) {
      try {
        const res = await fetch(`${basePath}/admin/logic-rules/${id}/toggle`, {
          method: 'POST',
          headers: { 'x-csrf-token': csrfToken }
        });
        if (res.ok) location.reload();
      } catch (err) {
        showToast('Error toggling rule', 'danger');
      }
    }

    async function deleteRule(id) {
      if (!confirm('Delete this rule?')) return;
      try {
        const res = await fetch(`${basePath}/admin/logic-rules/${id}`, {
          method: 'DELETE',
          headers: { 'x-csrf-token': csrfToken }
        });
        if (res.ok) location.reload();
      } catch (err) {
        showToast('Error deleting rule', 'danger');
      }
    }

    async function deleteSelected() {
      const selected = document.querySelectorAll('.row-checkbox:checked');
      if (selected.length === 0) return;
      if (!confirm(`Delete ${selected.length} rule(s)?`)) return;

      for (const cb of selected) {
        const id = cb.closest('tr').dataset.id;
        await fetch(`${basePath}/admin/logic-rules/${id}`, {
          method: 'DELETE',
          headers: { 'x-csrf-token': csrfToken }
        });
      }
      showToast('Selected rules deleted!');
      location.reload();
    }
  </script>
</body>
</html>
