<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SMS Settings - Sell Me a Pen Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .toast-container { position: fixed; top: 20px; right: 20px; z-index: 9999; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { active: 'sms-settings' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <h2 class="mb-4"><i class="bi bi-chat-dots text-primary me-2"></i>SMS Settings</h2>

        <div class="toast-container"></div>

        <form id="smsForm">
          <!-- Provider Configuration -->
          <div class="card mb-4">
            <div class="card-header bg-primary text-white">
              <h5 class="mb-0"><i class="bi bi-gear me-2"></i>SMS Provider</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label">Provider</label>
                    <select class="form-select" id="smsProvider">
                      <option value="twilio" <%= settings?.provider === 'twilio' ? 'selected' : '' %>>Twilio</option>
                      <option value="vonage" <%= settings?.provider === 'vonage' ? 'selected' : '' %>>Vonage (Nexmo)</option>
                      <option value="plivo" <%= settings?.provider === 'plivo' ? 'selected' : '' %>>Plivo</option>
                      <option value="messagebird" <%= settings?.provider === 'messagebird' ? 'selected' : '' %>>MessageBird</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label">From Number</label>
                    <input type="text" class="form-control" id="fromNumber" value="<%= settings?.fromNumber || '' %>" placeholder="+1234567890">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label">Account SID / API Key</label>
                    <input type="text" class="form-control" id="accountSid" value="<%= settings?.accountSid || '' %>" placeholder="AC...">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label">Auth Token / API Secret</label>
                    <input type="password" class="form-control" id="authToken" value="<%= settings?.authToken || '' %>" placeholder="Enter auth token">
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- SMS Templates -->
          <div class="card mb-4">
            <div class="card-header bg-success text-white">
              <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Message Templates</h5>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label">Welcome Message</label>
                <textarea class="form-control" id="welcomeTemplate" rows="2" placeholder="Hi {{name}}, welcome to our service!"><%= settings?.welcomeTemplate || '' %></textarea>
                <div class="form-text">Variables: {{name}}, {{phone}}, {{date}}</div>
              </div>
              <div class="mb-3">
                <label class="form-label">Session Complete Message</label>
                <textarea class="form-control" id="completeTemplate" rows="2" placeholder="Thanks for your session! Your score: {{score}}"><%= settings?.completeTemplate || '' %></textarea>
                <div class="form-text">Variables: {{name}}, {{score}}, {{outcome}}, {{duration}}</div>
              </div>
              <div class="mb-3">
                <label class="form-label">Follow-up Message</label>
                <textarea class="form-control" id="followupTemplate" rows="2" placeholder="How did your sales practice go?"><%= settings?.followupTemplate || '' %></textarea>
              </div>
            </div>
          </div>

          <!-- Automation -->
          <div class="card mb-4">
            <div class="card-header bg-info text-white">
              <h5 class="mb-0"><i class="bi bi-robot me-2"></i>Automation</h5>
            </div>
            <div class="card-body">
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="autoWelcome" <%= settings?.autoWelcome ? 'checked' : '' %>>
                <label class="form-check-label" for="autoWelcome">Send welcome SMS on session start</label>
              </div>
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="autoComplete" <%= settings?.autoComplete ? 'checked' : '' %>>
                <label class="form-check-label" for="autoComplete">Send completion SMS when session ends</label>
              </div>
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="autoFollowup" <%= settings?.autoFollowup ? 'checked' : '' %>>
                <label class="form-check-label" for="autoFollowup">Send follow-up SMS after 24 hours</label>
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" title="Save SMS settings">
            <i class="bi bi-save me-2"></i>Save Settings
          </button>
          <button type="button" class="btn btn-outline-secondary ms-2" onclick="testSms()" data-bs-toggle="tooltip" title="Send a test SMS">
            <i class="bi bi-send me-2"></i>Send Test SMS
          </button>
        </form>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const basePath = '<%= typeof basePath !== "undefined" ? basePath : "" %>';
    const csrfToken = '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>';

    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));
    });

    function showToast(message, type = 'success') {
      const container = document.querySelector('.toast-container');
      const toast = document.createElement('div');
      toast.className = `toast show align-items-center text-bg-${type} border-0`;
      toast.innerHTML = `<div class="d-flex"><div class="toast-body">${message}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>`;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    document.getElementById('smsForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      try {
        const res = await fetch(`${basePath}/admin/sms-settings`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'x-csrf-token': csrfToken },
          body: JSON.stringify({
            provider: document.getElementById('smsProvider').value,
            fromNumber: document.getElementById('fromNumber').value,
            accountSid: document.getElementById('accountSid').value,
            authToken: document.getElementById('authToken').value,
            welcomeTemplate: document.getElementById('welcomeTemplate').value,
            completeTemplate: document.getElementById('completeTemplate').value,
            followupTemplate: document.getElementById('followupTemplate').value,
            autoWelcome: document.getElementById('autoWelcome').checked,
            autoComplete: document.getElementById('autoComplete').checked,
            autoFollowup: document.getElementById('autoFollowup').checked
          })
        });
        if (res.ok) showToast('SMS settings saved!');
        else showToast('Failed to save', 'danger');
      } catch (err) {
        showToast('Error saving', 'danger');
      }
    });

    async function testSms() {
      const phone = prompt('Enter phone number to send test SMS:');
      if (!phone) return;

      try {
        const res = await fetch(`${basePath}/admin/sms-settings/test`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'x-csrf-token': csrfToken },
          body: JSON.stringify({ phone })
        });
        const data = await res.json();
        if (data.success) showToast('Test SMS sent!');
        else showToast('Failed: ' + (data.error || 'Unknown error'), 'danger');
      } catch (err) {
        showToast('Error sending test', 'danger');
      }
    }
  </script>
</body>
</html>
