<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login | Sell Me a Pen</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary-dark: #0B1F3B;
      --accent-gold: #D4AF37;
    }
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #0B1F3B 0%, #1a365d 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .auth-card {
      background: #fff;
      border-radius: 24px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
      overflow: hidden;
      max-width: 450px;
      width: 100%;
    }
    .auth-header {
      background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
      color: #fff;
      padding: 2.5rem;
      text-align: center;
    }
    .auth-header h1 { font-size: 1.75rem; font-weight: 700; margin-bottom: 0.5rem; }
    .auth-body { padding: 2.5rem; }
    .form-control {
      padding: 0.875rem 1rem;
      border-radius: 12px;
      border: 2px solid #e5e7eb;
    }
    .form-control:focus {
      border-color: var(--primary-dark);
      box-shadow: 0 0 0 4px rgba(11, 31, 59, 0.1);
    }
    .btn-primary {
      background: #dc3545;
      border-color: #dc3545;
      padding: 0.875rem;
      border-radius: 12px;
      font-weight: 600;
    }
    .btn-primary:hover { background: #c82333; border-color: #c82333; }
    .alert { border-radius: 12px; }
    .admin-badge {
      display: inline-block;
      background: rgba(255,255,255,0.2);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .password-toggle {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      z-index: 10;
      color: #6c757d;
    }
    .back-link {
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      position: fixed;
      top: 1rem;
      left: 1rem;
    }
    .back-link:hover {
      color: white;
    }
  </style>
</head>
<body>
  <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/" class="back-link">
    <i class="bi bi-arrow-left me-1"></i> Back to Home
  </a>

  <div class="auth-card">
    <div class="auth-header">
      <div class="mb-3">
        <i class="bi bi-shield-lock-fill" style="font-size: 2.5rem;"></i>
      </div>
      <span class="admin-badge mb-2"><i class="bi bi-gear me-1"></i>Admin Portal</span>
      <h1>Sell Me a Pen</h1>
      <p class="opacity-75 mb-0">Administrative Access</p>
    </div>
    <div class="auth-body">
      <div id="alertContainer">
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger d-flex align-items-center">
            <i class="bi bi-exclamation-circle me-2"></i>
            <%= error %>
          </div>
        <% } %>
        <% if (typeof success !== 'undefined' && success) { %>
          <div class="alert alert-success d-flex align-items-center">
            <i class="bi bi-check-circle me-2"></i>
            <%= success %>
          </div>
        <% } %>
      </div>

      <form method="POST" action="<%= typeof basePath !== 'undefined' ? basePath : '' %>/admin/login" id="loginForm">
        <input type="hidden" name="redirect" value="<%= typeof redirect !== 'undefined' ? redirect : ((typeof basePath !== 'undefined' ? basePath : '') + '/admin') %>">

        <div class="mb-3">
          <label class="form-label fw-medium">Email</label>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
            <input type="email" class="form-control" name="email" id="email" value="<%= typeof email !== 'undefined' && email ? email : '' %>" required autofocus placeholder="Enter admin email">
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label fw-medium">Password</label>
          <div class="input-group position-relative">
            <span class="input-group-text"><i class="bi bi-lock"></i></span>
            <input type="password" class="form-control" name="password" id="password" required placeholder="Enter password">
            <span class="password-toggle" id="passwordToggle">
              <i class="bi bi-eye" id="passwordToggleIcon"></i>
            </span>
          </div>
        </div>

        <div class="mb-4">
          <div class="form-check">
            <input type="checkbox" class="form-check-input" name="remember" id="remember">
            <label class="form-check-label" for="remember">Remember me</label>
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100" id="submitBtn">
          <span id="submitText"><i class="bi bi-box-arrow-in-right me-2"></i>Sign In to Admin</span>
          <span id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
        </button>
      </form>

      <p class="text-center mt-4 mb-0 text-muted small">
        <i class="bi bi-info-circle me-1"></i>
        Admin access required. <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/auth/login" class="text-decoration-none">User login</a>
      </p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    (function() {
      function togglePassword() {
        var field = document.getElementById('password');
        var icon = document.getElementById('passwordToggleIcon');
        if (field.type === 'password') {
          field.type = 'text';
          icon.classList.replace('bi-eye', 'bi-eye-slash');
        } else {
          field.type = 'password';
          icon.classList.replace('bi-eye-slash', 'bi-eye');
        }
      }

      document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        tooltipTriggerList.forEach(function(el) { new bootstrap.Tooltip(el); });

        document.getElementById('passwordToggle').addEventListener('click', function() {
          togglePassword();
        });
      });
    })();
  </script>
</body>
</html>
