<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Training Scenarios - Sell Me a Pen Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --sidebar-bg: <%= branding?.primaryColor || '#4f46e5' %>;
    }
    .sidebar { min-height: 100vh; background: var(--sidebar-bg); }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .bulk-actions { display: none; background: #e3f2fd; padding: 0.75rem 1rem; border-radius: 8px; }
    .bulk-actions.show { display: flex; }
    .row-checkbox { cursor: pointer; }
    tr.selected { background-color: #e3f2fd !important; }
    .difficulty-easy { color: #10b981; }
    .difficulty-medium { color: #f59e0b; }
    .difficulty-hard { color: #ef4444; }
    .difficulty-expert { color: #7c3aed; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { active: 'scenarios', basePath, branding }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <h2 class="mb-4"><i class="bi bi-collection-play text-primary me-2"></i>Training Scenarios</h2>

        <p class="text-muted mb-4">Pre-built training scenarios with different buyer personas and situations.</p>

        <!-- Add New Scenario Form -->
        <div class="card mb-4">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Add New Scenario</h5>
          </div>
          <div class="card-body">
            <form id="addScenarioForm">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" placeholder="e.g., Gatekeeper Navigation" required>
                </div>
                <div class="col-md-3 mb-3">
                  <label class="form-label">Category</label>
                  <select class="form-select" id="category" required>
                    <option value="cold_call">Cold Call</option>
                    <option value="discovery">Discovery</option>
                    <option value="demo">Demo</option>
                    <option value="objection">Objection Handling</option>
                    <option value="closing">Closing</option>
                  </select>
                </div>
                <div class="col-md-3 mb-3">
                  <label class="form-label">Difficulty</label>
                  <select class="form-select" id="difficulty" required>
                    <option value="easy">Easy</option>
                    <option value="medium" selected>Medium</option>
                    <option value="hard">Hard</option>
                    <option value="expert">Expert</option>
                  </select>
                </div>
                <div class="col-md-12 mb-3">
                  <label class="form-label">Description</label>
                  <input type="text" class="form-control" id="description" placeholder="Brief description of the scenario" required>
                </div>
                <div class="col-md-12 mb-3">
                  <label class="form-label">Buyer Persona</label>
                  <textarea class="form-control" id="buyerPersona" rows="3" placeholder="Describe the AI buyer's personality, motivations, and behavior..." required></textarea>
                  <small class="text-muted">This will be used to instruct the AI how to behave</small>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">Success Criteria (JSON Array)</label>
                  <textarea class="form-control" id="successCriteria" rows="2" placeholder='["Build rapport", "Identify needs", "Close the sale"]'></textarea>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">Coaching Tips (JSON Array)</label>
                  <textarea class="form-control" id="coachingTips" rows="2" placeholder='["Use open questions", "Listen actively"]'></textarea>
                </div>
                <div class="col-md-4 mb-3">
                  <label class="form-label">Estimated Duration (minutes)</label>
                  <input type="number" class="form-control" id="estimatedDuration" value="5" min="1" max="30">
                </div>
              </div>
              <button type="submit" class="btn btn-warning" data-bs-toggle="tooltip" title="Add this training scenario">
                <i class="bi bi-plus"></i> Add Scenario
              </button>
            </form>
          </div>
        </div>

        <!-- Bulk Actions Toolbar -->
        <div class="bulk-actions mb-3 align-items-center justify-content-between" id="bulkActions">
          <div>
            <span class="me-3"><strong id="selectedCount">0</strong> selected</span>
            <button class="btn btn-sm btn-outline-success" data-bs-toggle="tooltip" title="Enable selected scenarios" onclick="bulkEnable()">
              <i class="bi bi-check-circle"></i> Enable Selected
            </button>
            <button class="btn btn-sm btn-outline-secondary ms-2" data-bs-toggle="tooltip" title="Disable selected scenarios" onclick="bulkDisable()">
              <i class="bi bi-x-circle"></i> Disable Selected
            </button>
            <button class="btn btn-sm btn-outline-danger ms-2" data-bs-toggle="tooltip" title="Delete selected scenarios" onclick="bulkDelete()">
              <i class="bi bi-trash"></i> Delete Selected
            </button>
          </div>
          <button class="btn btn-sm btn-link" onclick="clearSelection()" data-bs-toggle="tooltip" title="Clear all selections">Clear Selection</button>
        </div>

        <!-- Scenarios Table -->
        <div class="card">
          <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>All Scenarios (<%= scenarios.length %>)</h5>
            <div>
              <select class="form-select form-select-sm d-inline-block me-2" id="categoryFilter" style="width: auto;" data-bs-toggle="tooltip" title="Filter by category">
                <option value="">All Categories</option>
                <option value="cold_call">Cold Call</option>
                <option value="discovery">Discovery</option>
                <option value="demo">Demo</option>
                <option value="objection">Objection</option>
                <option value="closing">Closing</option>
              </select>
              <select class="form-select form-select-sm d-inline-block" id="difficultyFilter" style="width: auto;" data-bs-toggle="tooltip" title="Filter by difficulty">
                <option value="">All Difficulties</option>
                <option value="easy">Easy</option>
                <option value="medium">Medium</option>
                <option value="hard">Hard</option>
                <option value="expert">Expert</option>
              </select>
            </div>
          </div>
          <div class="card-body p-0">
            <table class="table table-hover mb-0" id="scenariosTable">
              <thead class="table-light">
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" class="form-check-input" id="selectAll" data-bs-toggle="tooltip" title="Select all rows">
                  </th>
                  <th>Scenario</th>
                  <th>Category</th>
                  <th>Difficulty</th>
                  <th>Stats</th>
                  <th>Enabled</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="tableBody">
                <% scenarios.forEach(scenario => { %>
                <tr data-id="<%= scenario.id %>" data-category="<%= scenario.category %>" data-difficulty="<%= scenario.difficulty %>">
                  <td>
                    <input type="checkbox" class="form-check-input row-checkbox" value="<%= scenario.id %>">
                  </td>
                  <td>
                    <div>
                      <strong><%= scenario.name %></strong>
                      <div class="small text-muted"><%= scenario.description.substring(0, 60) %><%= scenario.description.length > 60 ? '...' : '' %></div>
                      <span class="badge bg-light text-dark"><i class="bi bi-clock"></i> ~<%= scenario.estimatedDuration %>min</span>
                    </div>
                  </td>
                  <td>
                    <span class="badge bg-<%= scenario.category === 'cold_call' ? 'primary' : scenario.category === 'discovery' ? 'info' : scenario.category === 'demo' ? 'success' : scenario.category === 'objection' ? 'warning text-dark' : 'danger' %>">
                      <%= scenario.category.replace('_', ' ') %>
                    </span>
                  </td>
                  <td>
                    <span class="difficulty-<%= scenario.difficulty %>">
                      <i class="bi bi-<%= scenario.difficulty === 'easy' ? 'emoji-smile' : scenario.difficulty === 'medium' ? 'emoji-neutral' : scenario.difficulty === 'hard' ? 'emoji-frown' : 'lightning-charge' %>"></i>
                      <%= scenario.difficulty.charAt(0).toUpperCase() + scenario.difficulty.slice(1) %>
                    </span>
                  </td>
                  <td>
                    <span class="badge bg-secondary" data-bs-toggle="tooltip" title="Times used">
                      <i class="bi bi-play-circle"></i> <%= scenario.usageCount %>
                    </span>
                    <% if (scenario.avgScore > 0) { %>
                    <span class="badge bg-success" data-bs-toggle="tooltip" title="Average score">
                      <i class="bi bi-graph-up"></i> <%= scenario.avgScore.toFixed(0) %>%
                    </span>
                    <% } %>
                  </td>
                  <td>
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" id="enabled-<%= scenario.id %>"
                             <%= scenario.enabled ? 'checked' : '' %>
                             onchange="toggleScenario('<%= scenario.id %>')"
                             data-bs-toggle="tooltip"
                             title="<%= scenario.enabled ? 'Disable' : 'Enable' %> this scenario">
                    </div>
                  </td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary"
                            data-bs-toggle="tooltip"
                            title="Edit this scenario"
                            onclick="editScenario('<%= scenario.id %>')">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-info ms-1"
                            data-bs-toggle="tooltip"
                            title="Preview buyer persona"
                            onclick="previewPersona('<%= scenario.id %>')">
                      <i class="bi bi-eye"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger ms-1"
                            data-bs-toggle="tooltip"
                            title="Delete this scenario"
                            onclick="deleteScenario('<%= scenario.id %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }) %>
                <% if (scenarios.length === 0) { %>
                <tr id="emptyRow">
                  <td colspan="7" class="text-center text-muted py-4">
                    No scenarios yet. Add some above.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">
              Showing <span id="showingStart">1</span>-<span id="showingEnd"><%= Math.min(10, scenarios.length) %></span> of <span id="totalRows"><%= scenarios.length %></span> scenarios
            </div>
            <nav>
              <ul class="pagination pagination-sm mb-0" id="pagination">
                <li class="page-item disabled" id="prevPage">
                  <a class="page-link" href="#" onclick="changePage(-1); return false;">
                    <i class="bi bi-chevron-left"></i>
                  </a>
                </li>
                <li class="page-item disabled" id="nextPage">
                  <a class="page-link" href="#" onclick="changePage(1); return false;">
                    <i class="bi bi-chevron-right"></i>
                  </a>
                </li>
              </ul>
            </nav>
            <div>
              <select class="form-select form-select-sm" id="pageSize" style="width: auto;" data-bs-toggle="tooltip" title="Rows per page">
                <option value="10">10 / page</option>
                <option value="25">25 / page</option>
                <option value="50">50 / page</option>
              </select>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Scenario</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="editForm">
            <input type="hidden" id="editId">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="editName" required>
              </div>
              <div class="col-md-3 mb-3">
                <label class="form-label">Category</label>
                <select class="form-select" id="editCategory" required>
                  <option value="cold_call">Cold Call</option>
                  <option value="discovery">Discovery</option>
                  <option value="demo">Demo</option>
                  <option value="objection">Objection</option>
                  <option value="closing">Closing</option>
                </select>
              </div>
              <div class="col-md-3 mb-3">
                <label class="form-label">Difficulty</label>
                <select class="form-select" id="editDifficulty" required>
                  <option value="easy">Easy</option>
                  <option value="medium">Medium</option>
                  <option value="hard">Hard</option>
                  <option value="expert">Expert</option>
                </select>
              </div>
              <div class="col-md-12 mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" id="editDescription" required>
              </div>
              <div class="col-md-12 mb-3">
                <label class="form-label">Buyer Persona</label>
                <textarea class="form-control" id="editBuyerPersona" rows="4" required></textarea>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Success Criteria (JSON Array)</label>
                <textarea class="form-control" id="editSuccessCriteria" rows="2"></textarea>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Coaching Tips (JSON Array)</label>
                <textarea class="form-control" id="editCoachingTips" rows="2"></textarea>
              </div>
              <div class="col-md-4 mb-3">
                <label class="form-label">Estimated Duration (min)</label>
                <input type="number" class="form-control" id="editEstimatedDuration" min="1" max="30">
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" onclick="saveEdit()" data-bs-toggle="tooltip" title="Save changes">
            <i class="bi bi-check"></i> Save Changes
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Preview Modal -->
  <div class="modal fade" id="previewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-person-badge me-2"></i>Buyer Persona Preview</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <h6 id="previewName" class="mb-3"></h6>
          <div class="card bg-light">
            <div class="card-body">
              <p id="previewPersonaText" class="mb-0" style="white-space: pre-wrap;"></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-6">
              <h6><i class="bi bi-check-circle text-success me-2"></i>Success Criteria</h6>
              <ul id="previewSuccessCriteria" class="mb-0"></ul>
            </div>
            <div class="col-md-6">
              <h6><i class="bi bi-lightbulb text-warning me-2"></i>Coaching Tips</h6>
              <ul id="previewCoachingTips" class="mb-0"></ul>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const basePath = '<%= typeof basePath !== "undefined" ? basePath : "" %>';
    let currentPage = 1;
    let pageSize = 10;
    let allRows = [];
    let filteredRows = [];
    let selectedRows = new Set();
    let editModal, previewModal;

    const scenariosData = <%- JSON.stringify(scenarios) %>;

    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));

      allRows = Array.from(document.querySelectorAll('#tableBody tr:not(#emptyRow)'));
      filteredRows = [...allRows];
      updatePagination();

      editModal = new bootstrap.Modal(document.getElementById('editModal'));
      previewModal = new bootstrap.Modal(document.getElementById('previewModal'));
    });

    function applyFilters() {
      const category = document.getElementById('categoryFilter').value;
      const difficulty = document.getElementById('difficultyFilter').value;
      filteredRows = allRows.filter(row => {
        const matchCategory = !category || row.dataset.category === category;
        const matchDifficulty = !difficulty || row.dataset.difficulty === difficulty;
        return matchCategory && matchDifficulty;
      });
      currentPage = 1;
      updatePagination();
    }

    document.getElementById('categoryFilter').addEventListener('change', applyFilters);
    document.getElementById('difficultyFilter').addEventListener('change', applyFilters);

    document.getElementById('selectAll').addEventListener('change', function() {
      const checkboxes = document.querySelectorAll('.row-checkbox');
      checkboxes.forEach(cb => {
        const row = cb.closest('tr');
        if (row.style.display !== 'none') {
          cb.checked = this.checked;
          if (this.checked) {
            selectedRows.add(cb.value);
            row.classList.add('selected');
          } else {
            selectedRows.delete(cb.value);
            row.classList.remove('selected');
          }
        }
      });
      updateBulkActions();
    });

    document.querySelectorAll('.row-checkbox').forEach(cb => {
      cb.addEventListener('change', function() {
        const row = this.closest('tr');
        if (this.checked) {
          selectedRows.add(this.value);
          row.classList.add('selected');
        } else {
          selectedRows.delete(this.value);
          row.classList.remove('selected');
        }
        updateBulkActions();
      });
    });

    function updateBulkActions() {
      const bulkActions = document.getElementById('bulkActions');
      const selectedCount = document.getElementById('selectedCount');
      selectedCount.textContent = selectedRows.size;
      bulkActions.classList.toggle('show', selectedRows.size > 0);
    }

    function clearSelection() {
      selectedRows.clear();
      document.querySelectorAll('.row-checkbox').forEach(cb => {
        cb.checked = false;
        cb.closest('tr').classList.remove('selected');
      });
      document.getElementById('selectAll').checked = false;
      updateBulkActions();
    }

    function updatePagination() {
      const totalPages = Math.ceil(filteredRows.length / pageSize);
      const start = (currentPage - 1) * pageSize;
      const end = Math.min(start + pageSize, filteredRows.length);

      allRows.forEach(row => row.style.display = 'none');
      filteredRows.forEach((row, idx) => {
        row.style.display = (idx >= start && idx < end) ? '' : 'none';
      });

      document.getElementById('showingStart').textContent = filteredRows.length > 0 ? start + 1 : 0;
      document.getElementById('showingEnd').textContent = end;
      document.getElementById('totalRows').textContent = filteredRows.length;

      document.getElementById('prevPage').classList.toggle('disabled', currentPage === 1);
      document.getElementById('nextPage').classList.toggle('disabled', currentPage >= totalPages);

      const pagination = document.getElementById('pagination');
      const pageItems = pagination.querySelectorAll('.page-number');
      pageItems.forEach(item => item.remove());

      const nextPageLi = document.getElementById('nextPage');
      for (let i = 1; i <= totalPages; i++) {
        const li = document.createElement('li');
        li.className = `page-item page-number ${i === currentPage ? 'active' : ''}`;
        li.innerHTML = `<a class="page-link" href="#" onclick="goToPage(${i}); return false;">${i}</a>`;
        pagination.insertBefore(li, nextPageLi);
      }
    }

    function changePage(delta) {
      const totalPages = Math.ceil(filteredRows.length / pageSize);
      const newPage = currentPage + delta;
      if (newPage >= 1 && newPage <= totalPages) {
        currentPage = newPage;
        updatePagination();
      }
    }

    function goToPage(page) {
      currentPage = page;
      updatePagination();
    }

    document.getElementById('pageSize').addEventListener('change', function() {
      pageSize = parseInt(this.value);
      currentPage = 1;
      updatePagination();
    });

    document.getElementById('addScenarioForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      try {
        const res = await fetch(`${basePath}/admin/scenarios`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name: document.getElementById('name').value,
            category: document.getElementById('category').value,
            difficulty: document.getElementById('difficulty').value,
            description: document.getElementById('description').value,
            buyerPersona: document.getElementById('buyerPersona').value,
            successCriteria: document.getElementById('successCriteria').value,
            coachingTips: document.getElementById('coachingTips').value,
            estimatedDuration: parseInt(document.getElementById('estimatedDuration').value)
          })
        });
        if (res.ok) location.reload();
        else alert('Failed to add scenario');
      } catch (err) {
        alert('Error adding scenario');
      }
    });

    function editScenario(id) {
      const scenario = scenariosData.find(s => s.id === id);
      if (scenario) {
        document.getElementById('editId').value = scenario.id;
        document.getElementById('editName').value = scenario.name;
        document.getElementById('editCategory').value = scenario.category;
        document.getElementById('editDifficulty').value = scenario.difficulty;
        document.getElementById('editDescription').value = scenario.description;
        document.getElementById('editBuyerPersona').value = scenario.buyerPersona;
        document.getElementById('editSuccessCriteria').value = scenario.successCriteria;
        document.getElementById('editCoachingTips').value = scenario.coachingTips;
        document.getElementById('editEstimatedDuration').value = scenario.estimatedDuration;
        editModal.show();
      }
    }

    function previewPersona(id) {
      const scenario = scenariosData.find(s => s.id === id);
      if (scenario) {
        document.getElementById('previewName').textContent = scenario.name;
        document.getElementById('previewPersonaText').textContent = scenario.buyerPersona;

        const successList = document.getElementById('previewSuccessCriteria');
        const tipsList = document.getElementById('previewCoachingTips');

        try {
          const criteria = JSON.parse(scenario.successCriteria || '[]');
          successList.innerHTML = criteria.map(c => `<li>${c}</li>`).join('') || '<li class="text-muted">None defined</li>';
        } catch { successList.innerHTML = '<li class="text-muted">Invalid JSON</li>'; }

        try {
          const tips = JSON.parse(scenario.coachingTips || '[]');
          tipsList.innerHTML = tips.map(t => `<li>${t}</li>`).join('') || '<li class="text-muted">None defined</li>';
        } catch { tipsList.innerHTML = '<li class="text-muted">Invalid JSON</li>'; }

        previewModal.show();
      }
    }

    async function saveEdit() {
      const id = document.getElementById('editId').value;
      try {
        const res = await fetch(`${basePath}/admin/scenarios/${id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name: document.getElementById('editName').value,
            category: document.getElementById('editCategory').value,
            difficulty: document.getElementById('editDifficulty').value,
            description: document.getElementById('editDescription').value,
            buyerPersona: document.getElementById('editBuyerPersona').value,
            successCriteria: document.getElementById('editSuccessCriteria').value,
            coachingTips: document.getElementById('editCoachingTips').value,
            estimatedDuration: parseInt(document.getElementById('editEstimatedDuration').value)
          })
        });
        if (res.ok) location.reload();
        else alert('Failed to update scenario');
      } catch (err) {
        alert('Error updating scenario');
      }
    }

    async function toggleScenario(id) {
      try {
        await fetch(`${basePath}/admin/scenarios/${id}/toggle`, { method: 'POST' });
      } catch (err) {
        console.error('Error toggling scenario:', err);
      }
    }

    async function deleteScenario(id) {
      if (!confirm('Delete this scenario?')) return;
      try {
        await fetch(`${basePath}/admin/scenarios/${id}`, { method: 'DELETE' });
        location.reload();
      } catch (err) {
        alert('Error deleting scenario');
      }
    }

    async function bulkEnable() {
      try {
        for (const id of selectedRows) {
          const checkbox = document.getElementById(`enabled-${id}`);
          if (checkbox && !checkbox.checked) {
            await fetch(`${basePath}/admin/scenarios/${id}/toggle`, { method: 'POST' });
          }
        }
        location.reload();
      } catch (err) {
        alert('Error enabling scenarios');
      }
    }

    async function bulkDisable() {
      try {
        for (const id of selectedRows) {
          const checkbox = document.getElementById(`enabled-${id}`);
          if (checkbox && checkbox.checked) {
            await fetch(`${basePath}/admin/scenarios/${id}/toggle`, { method: 'POST' });
          }
        }
        location.reload();
      } catch (err) {
        alert('Error disabling scenarios');
      }
    }

    async function bulkDelete() {
      if (!confirm(`Delete ${selectedRows.size} selected scenarios?`)) return;
      try {
        for (const id of selectedRows) {
          await fetch(`${basePath}/admin/scenarios/${id}`, { method: 'DELETE' });
        }
        location.reload();
      } catch (err) {
        alert('Error deleting scenarios');
      }
    }
  </script>
