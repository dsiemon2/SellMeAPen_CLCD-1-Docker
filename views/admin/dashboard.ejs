<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Sell Me a Pen Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --sidebar-bg: <%= branding?.primaryColor || '#4f46e5' %>;
    }
    .sidebar { min-height: 100vh; background: var(--sidebar-bg); }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .stat-card { border-radius: 12px; border: none; }
    .stat-card .stat-icon { font-size: 2.5rem; opacity: 0.8; }
    .stat-card .stat-value { font-size: 2rem; font-weight: bold; }
    .bulk-actions { display: none; background: #e3f2fd; padding: 0.75rem 1rem; border-radius: 8px; }
    .bulk-actions.show { display: flex; }
    .row-checkbox { cursor: pointer; }
    tr.selected { background-color: #e3f2fd !important; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { active: 'dashboard', basePath, branding }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-speedometer2 text-primary me-2"></i>Dashboard</h2>
          <a href="<%= basePath %>/" target="_blank" class="btn btn-primary" data-bs-toggle="tooltip" title="Launch the sales training interface">
            <i class="bi bi-play-fill"></i> Open Training App
          </a>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card stat-card bg-primary text-white">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="stat-value"><%= stats.totalSessions %></div>
                  <div>Total Sessions</div>
                </div>
                <i class="bi bi-chat-left-text stat-icon"></i>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stat-card bg-success text-white">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="stat-value"><%= stats.salesMade %></div>
                  <div>Sales Made</div>
                </div>
                <i class="bi bi-trophy stat-icon"></i>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stat-card bg-info text-white">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="stat-value"><%= stats.conversionRate %>%</div>
                  <div>Conversion Rate</div>
                </div>
                <i class="bi bi-percent stat-icon"></i>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stat-card bg-warning text-dark">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <div class="stat-value"><%= Math.round(stats.avgMessages) || 0 %></div>
                  <div>Avg Messages/Sale</div>
                </div>
                <i class="bi bi-chat-dots stat-icon"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3">
                    <a href="<%= basePath %>/admin/greeting" class="btn btn-outline-primary w-100 py-3" data-bs-toggle="tooltip" title="Customize the AI welcome message">
                      <i class="bi bi-chat-quote d-block mb-2" style="font-size: 1.5rem;"></i>
                      Edit Greeting
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="<%= basePath %>/admin/product" class="btn btn-outline-success w-100 py-3" data-bs-toggle="tooltip" title="Configure pen features, pricing, and benefits">
                      <i class="bi bi-box-seam d-block mb-2" style="font-size: 1.5rem;"></i>
                      Configure Pen
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="<%= basePath %>/admin/techniques" class="btn btn-outline-info w-100 py-3" data-bs-toggle="tooltip" title="Enable/disable sales techniques used by AI">
                      <i class="bi bi-lightbulb d-block mb-2" style="font-size: 1.5rem;"></i>
                      Sales Techniques
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="<%= basePath %>/admin/analytics" class="btn btn-outline-warning w-100 py-3" data-bs-toggle="tooltip" title="View conversion rates and performance metrics">
                      <i class="bi bi-graph-up d-block mb-2" style="font-size: 1.5rem;"></i>
                      View Analytics
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Bulk Actions Toolbar -->
        <div class="bulk-actions mb-3 align-items-center justify-content-between" id="bulkActions">
          <div>
            <span class="me-3"><strong id="selectedCount">0</strong> selected</span>
            <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete selected sessions" onclick="bulkDelete()">
              <i class="bi bi-trash"></i> Delete Selected
            </button>
          </div>
          <button class="btn btn-sm btn-link" onclick="clearSelection()" data-bs-toggle="tooltip" title="Clear all selections">Clear Selection</button>
        </div>

        <!-- Recent Sessions -->
        <div class="card">
          <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Sessions</h5>
            <a href="<%= basePath %>/admin/sessions" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="View all training sessions">View All</a>
          </div>
          <div class="card-body p-0">
            <table class="table table-hover mb-0" id="sessionsTable">
              <thead class="table-light">
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" class="form-check-input" id="selectAll" data-bs-toggle="tooltip" title="Select all">
                  </th>
                  <th>Session ID</th>
                  <th>Started</th>
                  <th>Phase</th>
                  <th>Outcome</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="tableBody">
                <% sessions.forEach(session => { %>
                <tr data-id="<%= session.sessionId %>">
                  <td><input type="checkbox" class="form-check-input row-checkbox" value="<%= session.sessionId %>"></td>
                  <td><code><%= session.sessionId.substring(0, 8) %>...</code></td>
                  <td><%= new Date(session.startedAt).toLocaleString() %></td>
                  <td>
                    <span class="badge bg-<%= session.currentPhase === 'completed' ? 'success' : 'secondary' %>">
                      <%= session.currentPhase %>
                    </span>
                  </td>
                  <td>
                    <% if (session.outcome === 'sale_made') { %>
                      <span class="badge bg-success"><i class="bi bi-check-circle"></i> Sale Made</span>
                    <% } else if (session.outcome === 'no_sale') { %>
                      <span class="badge bg-danger"><i class="bi bi-x-circle"></i> No Sale</span>
                    <% } else if (session.outcome === 'abandoned') { %>
                      <span class="badge bg-warning text-dark"><i class="bi bi-dash-circle"></i> Abandoned</span>
                    <% } else { %>
                      <span class="badge bg-info"><i class="bi bi-hourglass"></i> In Progress</span>
                    <% } %>
                  </td>
                  <td>
                    <a href="<%= basePath %>/admin/sessions/<%= session.sessionId %>"
                       class="btn btn-sm btn-outline-primary"
                       data-bs-toggle="tooltip"
                       title="View session details and conversation">
                      <i class="bi bi-eye"></i>
                    </a>
                    <button class="btn btn-sm btn-outline-danger ms-1"
                            data-bs-toggle="tooltip"
                            title="Delete this session"
                            onclick="deleteSession('<%= session.sessionId %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }) %>
                <% if (sessions.length === 0) { %>
                <tr id="emptyRow">
                  <td colspan="6" class="text-center text-muted py-4">
                    No sessions yet. Start training to see data here.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <!-- Pagination Footer -->
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">Showing <span id="showingStart">1</span>-<span id="showingEnd"><%= Math.min(10, sessions.length) %></span> of <span id="totalRows"><%= sessions.length %></span></div>
            <nav>
              <ul class="pagination pagination-sm mb-0" id="pagination">
                <li class="page-item disabled" id="prevPage">
                  <a class="page-link" href="#" onclick="changePage(-1); return false;"><i class="bi bi-chevron-left"></i></a>
                </li>
                <li class="page-item disabled" id="nextPage">
                  <a class="page-link" href="#" onclick="changePage(1); return false;"><i class="bi bi-chevron-right"></i></a>
                </li>
              </ul>
            </nav>
            <select class="form-select form-select-sm" id="pageSize" style="width: auto;" data-bs-toggle="tooltip" title="Rows per page">
              <option value="10">10 / page</option>
              <option value="25">25 / page</option>
              <option value="50">50 / page</option>
            </select>
          </div>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const basePath = '<%= typeof basePath !== "undefined" ? basePath : "" %>';
    let currentPage = 1;
    let pageSize = 10;
    let allRows = [];
    let selectedRows = new Set();

    // Initialize tooltips and row selection
    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));

      allRows = Array.from(document.querySelectorAll('#tableBody tr:not(#emptyRow)'));
      updatePagination();
      initCheckboxes();
    });

    function initCheckboxes() {
      const selectAll = document.getElementById('selectAll');
      if (selectAll) {
        selectAll.addEventListener('change', function() {
          const checkboxes = document.querySelectorAll('.row-checkbox');
          checkboxes.forEach(cb => {
            cb.checked = this.checked;
            const row = cb.closest('tr');
            if (this.checked) {
              selectedRows.add(cb.value);
              row.classList.add('selected');
            } else {
              selectedRows.delete(cb.value);
              row.classList.remove('selected');
            }
          });
          updateBulkActions();
        });
      }

      document.querySelectorAll('.row-checkbox').forEach(cb => {
        cb.addEventListener('change', function() {
          const row = this.closest('tr');
          if (this.checked) {
            selectedRows.add(this.value);
            row.classList.add('selected');
          } else {
            selectedRows.delete(this.value);
            row.classList.remove('selected');
          }
          updateBulkActions();
        });
      });
    }

    function updateBulkActions() {
      const bulkActions = document.getElementById('bulkActions');
      const selectedCount = document.getElementById('selectedCount');
      selectedCount.textContent = selectedRows.size;
      bulkActions.classList.toggle('show', selectedRows.size > 0);
    }

    function clearSelection() {
      selectedRows.clear();
      document.querySelectorAll('.row-checkbox').forEach(cb => {
        cb.checked = false;
        cb.closest('tr').classList.remove('selected');
      });
      document.getElementById('selectAll').checked = false;
      updateBulkActions();
    }

    function updatePagination() {
      const totalPages = Math.ceil(allRows.length / pageSize);
      const start = (currentPage - 1) * pageSize;
      const end = Math.min(start + pageSize, allRows.length);

      allRows.forEach((row, idx) => {
        row.style.display = (idx >= start && idx < end) ? '' : 'none';
      });

      document.getElementById('showingStart').textContent = allRows.length > 0 ? start + 1 : 0;
      document.getElementById('showingEnd').textContent = end;
      document.getElementById('totalRows').textContent = allRows.length;

      document.getElementById('prevPage').classList.toggle('disabled', currentPage === 1);
      document.getElementById('nextPage').classList.toggle('disabled', currentPage >= totalPages);

      const pagination = document.getElementById('pagination');
      const pageItems = pagination.querySelectorAll('.page-number');
      pageItems.forEach(item => item.remove());

      const nextPageLi = document.getElementById('nextPage');
      for (let i = 1; i <= totalPages; i++) {
        const li = document.createElement('li');
        li.className = `page-item page-number ${i === currentPage ? 'active' : ''}`;
        li.innerHTML = `<a class="page-link" href="#" onclick="goToPage(${i}); return false;">${i}</a>`;
        pagination.insertBefore(li, nextPageLi);
      }
    }

    function changePage(delta) {
      const totalPages = Math.ceil(allRows.length / pageSize);
      const newPage = currentPage + delta;
      if (newPage >= 1 && newPage <= totalPages) {
        currentPage = newPage;
        updatePagination();
      }
    }

    function goToPage(page) {
      currentPage = page;
      updatePagination();
    }

    document.getElementById('pageSize')?.addEventListener('change', function() {
      pageSize = parseInt(this.value);
      currentPage = 1;
      updatePagination();
    });

    async function deleteSession(sessionId) {
      if (!confirm('Delete this session?')) return;
      try {
        await fetch(`${basePath}/admin/sessions/${sessionId}`, { method: 'DELETE' });
        location.reload();
      } catch (err) {
        alert('Error deleting session');
      }
    }

    async function bulkDelete() {
      if (!confirm(`Delete ${selectedRows.size} selected sessions?`)) return;
      try {
        for (const id of selectedRows) {
          await fetch(`${basePath}/admin/sessions/${id}`, { method: 'DELETE' });
        }
        location.reload();
      } catch (err) {
        alert('Error deleting sessions');
      }
    }
  </script>
</body>
</html>
